{% extends 'base.html.twig' %}

{% block title %}Bibliothèque{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
    <header>
        <h1>Bibliothèque</h1>
        {% if app.user %}
            <a href="{{ path('app_book_new') }}" class="dashboard" title="Ajouter un livre"><i class="bi bi-plus-circle"></i></a>
        {% endif %}
    </header>
    
    <main class="container containerEntity">
    {% for book in books %}
        <a href="{{ path('app_book_show', {'id': book.id}) }}">
            <div class="card cardBook">
                {% if book.bookCover %}
                    <img src="{{ book.bookCover }}" title="{{ book.title }}" class="card-img-top" alt="Image de {{ book.title }}">
                {% else %} 
                    <img src="{{ asset('asset/img/bookDefault.png') }}" title="Image de livres" class="card-img-top" alt="Couverture de {{ book.title }}">
                {% endif %}
                <div class="card-body text-center">
                    <h5 class="card-title">{{ book.title|title }}</h5>
                </div>
            </div>
        </a>
        {% else %}
            <p class="text-center">Aucun livre trouvé...</p>
        {% endfor %}
    </main>
{% include 'footer.html.twig' %}
{% endblock %}
