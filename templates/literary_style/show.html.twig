{% extends 'base.html.twig' %}

{% block title %}Styles littéraires{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
    <header>
        <h1>Styles littéraires</h1>
        {% if app.user %}
            <div class="dashboard">
                <a href="{{ path('app_literary_style_index') }}" title="Retour"><i class="bi bi-backspace-fill"></i></a>

                <a href="{{ path('app_literary_style_edit', {'id': literary_style.id}) }}" title="Modifier le style littéraire"><i class="bi bi-pencil-square"></i></a>

                {{ include('literary_style/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </header>

    <main id="entityInfos">
        <div>
            <h3 class="mt-5">Styles littéraires</h3>
            {{ literary_style.name }}
        </div>
    </main>
    
{% endblock %}
