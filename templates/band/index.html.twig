{% extends 'base.html.twig' %}

{% block title %}Musique{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
    <header>
        <h1>Les groupes</h1>
        <form action="{{ path('search-result')}}">
            <input name="search" id="search" class="search" type="text" placeholder="Rechercher un groupe" title="Rechercher">
            <button type="submit" id="go" title="Go"><i class="bi bi-search"></i></button>
        </form>
        <a href="{{ path('app_band_new') }}" class="dashboard"><i class="bi bi-plus-circle"></i></a>
    </header>
    
    <main class="container">
    {% for band in bands %}
        <div class="card" style="max-width: 24rem;">
            {% if band.picture %}
                <img src="{{ band.picture }}" title="{{ band.name }}" class="card-img-top" alt="Image de {{ band.name }}">
            {% else %} 
                <img src="{{ asset('asset/img/bandDefault.jpg') }}" title="Image de concert" class="card-img-top" alt="Image de concert">
            {% endif %}
            <div class="card-body">
                <a href="{{ path('app_band_show', {'id': band.id}) }}"><h5 class="card-title">{{ band.name }}</h5></a>
            </div>
        </div>
        {% else %}
            <p class="text-center">Aucun groupe trouv√©...</p>
        {% endfor %}
    </main>

{% endblock %}
