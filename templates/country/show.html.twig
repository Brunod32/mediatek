{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
    <header>
        <h1>Country</h1>
        {% if app.user %}
            <div class="dashboard">
                <a href="{{ path('app_country_index') }}" title="Retour"><i class="bi bi-backspace-fill"></i></a>

                <a href="{{ path('app_country_edit', {'id': country.id}) }}" title="Modifier le pays"><i class="bi bi-pencil-square"></i></a>

                {{ include('country/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </header>

    <main id="entityInfos">
        <div>
            <h3 class="mt-5">Pays</h3>
            {{ country.name }}
        </div>
    </main>
{% endblock %}
