{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
    <header>
        <h1>{{ album.title|title }}</h1>
        {% if app.user %}
            <div class="dashboard">
                <a href="{{ path('app_album_index') }}"><i class="bi bi-backspace-fill"></i></a>

                <a href="{{ path('app_album_edit', {'id': album.id}) }}"><i class="bi bi-pencil-square"></i></a>

                {{ include('album/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </header>

    <main>
        <div>
            {% if album.albumCover %}
                <img src="{{ album.albumCover }}" class="cdImg" alt="Pochette de l'album {{ album.title|title }}">
            {% else %}
                <img src="{{ asset('asset/img/cdDefault.jpg') }}" class="cdImg" alt="Pochette du CD">
            {% endif %}
        </div>
        <div>
            <h3 class="mt-5">Interprète</h3>
            <a href="{{ path('app_band_show', {'id': album.band.id}) }}">{{ album.band }}</a>

            <h3 class="mt-3">Année de sortie</h3>
            {% if album.releasedYear %}
                <p>{{ album.releasedYear }}</p>
            {% else %}
                <p>Donnée non renseignée...</p>
            {% endif %}
        </div>

        
    </main>

    
{% endblock %}
