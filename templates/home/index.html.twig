{% extends 'base.html.twig' %}

{% block title %}Accueil Mediatek{% endblock %}

{% block body %}
<header>
    <h1>{{ controller_name }}</h1>
    <div class="d-flex m-3">
        <div id="btn-log">
            {% if not app.user %}
                <a href="{{ path('app_login') }}" type="button" class="btn btn-outline-primary me-2 px-2"><i class="bi bi-box-arrow-in-right"></i></a>
            {% endif %}
            {% if app.user %}
                <a href="{{ path('app_account') }}" type="button" class="btn btn-outline-primary me-2 px-2"><i class="bi bi-person-vcard"></i></a>
                <a href="{{ path('app_logout') }}" type="button" class="btn btn-outline-primary me-2 px-2"><i class="bi bi-box-arrow-in-left"></i></a>
            {% endif %}
        </div>
    </div>
</header>

<main>
    <a href="{{ path('app_reading') }}" title="Consulter la bibliothèque"><img class="imgHome" src="{{ asset('asset/img/bookDefault.png') }}" alt="Image de livres"></a>
    <a href="{{ path('app_music') }}" title="Consulter la CDthèque"><img class="imgHome" src="{{ asset('asset/img/guitar-amplifier.png') }}" alt="Image d'un amplificateur de guitare"></a>
</main>
{% endblock %}
